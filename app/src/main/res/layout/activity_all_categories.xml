<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qnally.shappapp.AllCategories">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/primary_bg"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"/>

    <ImageButton
        android:id="@+id/elec_cat"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/electronics_cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/cloth_cat"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="68dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/clothing_cat"
        app:layout_constraintBottom_toTopOf="@+id/books_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ent_cat"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
        android:id="@+id/ent_cat"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/entertainment_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toEndOf="@+id/elec_cat"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/hous_cat"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/household_cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@drawable/books_cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vg_cat"/>

    <ImageButton
        android:id="@+id/vg_cat"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/video_games_cat"
        app:layout_constraintBottom_toTopOf="@+id/hous_cat"
        app:layout_constraintEnd_toStartOf="@+id/cloth_cat"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elec_cat"
        app:layout_constraintVertical_bias="0.492"/>

    <ImageButton
        android:id="@+id/books_cat"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/books_cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toEndOf="@+id/hous_cat"/>

</android.support.constraint.ConstraintLayout>
